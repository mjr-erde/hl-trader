{
  "name": "@erde/root",
  "private": true,
  "version": "0.6.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/marketplaces/*"
  ],
  "scripts": {
    "dev": "vite build && concurrently -n server,vite \"tsx server/index.ts\" \"vite build --watch\"",
    "build": "tsc -b && vite build",
    "preview": "tsx server/index.ts",
    "server": "tsx server/index.ts",
    "dev-web": "(tsx server/index.ts &) && vite",
    "cli": "tsx src/cli.ts",
    "erde": "npx tsx packages/cli/src/index.ts",
    "test": "vitest run",
    "setup-ml": "bash packages/core/src/ml/setup.sh"
  },
  "dependencies": {
    "@nktkas/hyperliquid": "^0.31.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^12.1.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "lightweight-charts": "^5.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.7.0",
    "viem": "^2.46.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "supertest": "^7.2.2",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "vitest": "^4.0.18"
  }
}
